{{!-- Button to create a new student --}}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="mb-0">Student List</h3>
  <a class="btn btn-success" href="/student/">+ Add Student</a>
</div>

{{!-- Table to display the list of students --}}
<div class="table-responsive">
  <table class="table table-hover align-middle shadow-sm">
      <thead class="table-primary">
          <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>City</th>
              <th>Action</th>
          </tr>
      </thead>
      <tbody>
          {{!-- Loop through each student in the list --}}
          {{#each list}}
          <tr>
              <td>{{this.fullName}}</td>
              <td>{{this.email}}</td>
              <td>{{this.mobile}}</td>
              <td>{{this.city}}</td>
              <td>
                  <a class="btn btn-sm btn-outline-primary me-1" href="/student/{{this._id}}">Edit</a>
                  <a class="btn btn-sm btn-outline-danger" href="/student/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
              </td>
          </tr>
          {{/each}}
      </tbody>
  </table>
</div>